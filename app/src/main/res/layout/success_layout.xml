<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorGreen">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_success" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Success"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        <TextView
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:id="@+id/otpmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:singleLine="true"
                android:maxLength="1"
                android:inputType="numberPassword"
                android:gravity="center"
                android:hint="*"
                android:id="@+id/otpstr1"
                android:layout_margin="5dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/border_bg"></EditText>
            <EditText
                android:singleLine="true"
                android:maxLength="1"
                android:inputType="numberPassword"
                android:gravity="center"
                android:hint="*"
                android:id="@+id/otpstr2"
                android:layout_margin="5dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/border_bg"></EditText>
            <EditText
                android:singleLine="true"
                android:maxLength="1"
                android:inputType="numberPassword"
                android:gravity="center"
                android:hint="*"
                android:id="@+id/otpstr3"
                android:layout_margin="5dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/border_bg"></EditText>
            <EditText
                android:singleLine="true"
                android:maxLength="1"
                android:inputType="numberPassword"
                android:gravity="center"
                android:hint="*"
                android:id="@+id/otpstr4"
                android:layout_margin="5dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/border_bg"></EditText>

        </LinearLayout>

        <TextView
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:id="@+id/countOtpSec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:visibility="visible"
            android:id="@+id/buttonOk"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_bg_transperent"
            android:text="Verify to Login"
            android:textColor="@color/colorGreen" />

    </LinearLayout>

</LinearLayout>
