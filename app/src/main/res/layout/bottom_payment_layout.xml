<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="Net Payable"
            android:textSize="18sp"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
        <TextView
            android:gravity="end"
            android:id="@+id/net_amount"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:textSize="18sp" />
    </LinearLayout>

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/logo_payu"
       android:layout_margin="@dimen/dimen_16sp"
       android:padding="@dimen/dimen_16sp"
       android:background="@drawable/border_bg"/>

    <!--<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/payment_methods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10" />-->

    <TextView
        android:id="@+id/descript"
        android:text="@string/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/Black" />

    <Button
        style="@style/TextAppearance.MaterialComponents.Button"
        android:id="@+id/confirm_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_16sp"
        android:enabled="true"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:padding="@dimen/padding_10"
        android:text="Confirm Payment"
        android:textAllCaps="false"
        android:textSize="18sp" />



</LinearLayout>
