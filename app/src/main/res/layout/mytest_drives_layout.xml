<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_margin="@dimen/dimen_5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_5dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Product Name" />

            <TextView
                android:textColor="@color/Black"
                android:id="@+id/productname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Dealer Name" />

            <TextView
                android:textColor="@color/Black"
                android:id="@+id/dealername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Dealer Phone" />

            <TextView
                android:textColor="@color/Black"
                android:id="@+id/dealercontact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Requested On" />

            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black"
                android:id="@+id/rewueston"
                android:layout_width="0dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7" />
            <ImageButton
                app:srcCompat="@drawable/ic_view"
                android:id="@+id/view_under"
                android:visibility="gone"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_5dp"
                android:layout_width="42dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:drawablePadding="@dimen/dimen_10dp"
                android:layout_height="24dp"/>

        </LinearLayout>

       <!-- <TextView
            android:visibility="gone"
            android:textSize="18sp"
            android:textColor="@color/DarkGreen"
            android:padding="@dimen/dimen_5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:id="@+id/complete"/>-->

        <HorizontalScrollView
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/tracktestlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - " />

            <!--<TextView
                android:visibility=""
                android:drawablePadding="@dimen/dimen_5dp"
                android:drawableRight="@drawable/ic_info_black"
                android:id="@+id/cancel"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled" />-->

            <TextView
                android:id="@+id/accepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_info_black"
                android:drawablePadding="@dimen/dimen_5dp"
                android:gravity="center_vertical"
                android:text="Accepted" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - " />

            <TextView
                android:id="@+id/Confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - " />

            <TextView
                android:id="@+id/deleivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered" />

        </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="right">

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/viewdrive"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardElevation="@dimen/padding_10">
                <TextView
                    android:layout_gravity="center"
                    android:padding="@dimen/dimen_5dp"
                    android:layout_width="wrap_content"
                    android:text="View"
                    android:textColor="@color/white"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_view" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/canceldrive"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                app:cardBackgroundColor="@color/light_grey"
                app:cardElevation="@dimen/padding_10">
                <TextView
                    android:layout_gravity="center"
                    android:padding="@dimen/dimen_5dp"
                    android:layout_width="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/Black"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/close" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/confirmdrive"
                android:visibility="gone"
                app:cardBackgroundColor="@color/DarkGreen"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                app:cardElevation="@dimen/padding_10">

                <TextView
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/dimen_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_check" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

    <ImageView
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:visibility="gone"
        android:id="@+id/cancel"
        android:layout_alignParentEnd="true"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:src="@drawable/cancel"/>

    <ImageView
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:visibility="visible"
        android:id="@+id/complete"
        android:layout_alignParentEnd="true"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:background="@color/LightGreen"
        android:src="@drawable/completed"/>


</RelativeLayout>