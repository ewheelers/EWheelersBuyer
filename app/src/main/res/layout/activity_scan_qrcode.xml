<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ScanQRCode">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"></SurfaceView>

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:background="@drawable/scan_bg" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/flash_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_16sp"
        android:background="@drawable/round_button"
        android:contentDescription="iconoff"
        android:padding="@dimen/padding_10"
        app:srcCompat="@drawable/ic_flash_off" />

    <TextView
        android:visibility="gone"
        android:id="@+id/txtBarcodeValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_bg_white"
        android:drawableTop="@drawable/ic_scan"
        android:drawablePadding="@dimen/dimen_16sp"
        android:gravity="center"
        android:text="Scan charging hub QR code"
        android:textColor="@android:color/black" />

    <TextView
        android:visibility="gone"
        android:id="@+id/find_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg_white"
        android:gravity="center"
        android:text="how to find QR code ?"
        android:textColor="@android:color/holo_green_dark" />

    <LinearLayout
        android:layout_marginTop="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/border_bg"
                android:padding="@dimen/padding_10"
                app:srcCompat="@drawable/ic_electric_charge" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/padding_10"
                app:srcCompat="@drawable/ic_scan" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawablePadding="@dimen/dimen_5dp"
            android:drawableTop="@drawable/ic_scan"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/padding_10"
            android:text="Scan QR code displayed on the charging hub"
            android:textColor="@color/Black" />
    </LinearLayout>

</LinearLayout>
