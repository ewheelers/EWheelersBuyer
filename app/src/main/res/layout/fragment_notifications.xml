<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen_70dp"
    android:orientation="vertical">

  <androidx.cardview.widget.CardView
      android:layout_margin="@dimen/padding_10"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="@dimen/padding_10">
      <LinearLayout
          android:id="@+id/rewardLayout"
          android:padding="@dimen/padding_10"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Current Reward points"
              android:gravity="center"
              android:textColor="@color/Black"/>
          <TextView
              android:id="@+id/reward_points"
              android:textSize="22sp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textColor="@color/colorPrimary"/>
          <TextView
              android:id="@+id/reward_value"
              android:textSize="18sp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textColor="@color/colorNavy"/>
      </LinearLayout>
  </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/padding_10">
        <LinearLayout
            android:id="@+id/mycredits"
            android:padding="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My credits"
                android:gravity="center"
                android:textColor="@color/Black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available balance"
                android:gravity="center"
                android:textColor="@color/gray"/>
            <TextView
                android:textSize="22sp"
                android:id="@+id/creditbal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorNavy"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/padding_10">
        <LinearLayout
            android:id="@+id/myoffers"
            android:padding="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Offers"
                android:gravity="center"
                android:textColor="@color/Black"/>
            <ImageView
                android:src="@drawable/ewheelerspartner_logo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>