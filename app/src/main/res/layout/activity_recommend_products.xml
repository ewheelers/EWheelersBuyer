<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".RecommendProductsActivity">

    <TextView
        android:id="@+id/recomend_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Recommended Products"
        android:textColor="@color/colorPrimary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommended_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/placeOrder_layout"
        android:layout_below="@+id/recomend_text" />

    <LinearLayout
        android:id="@+id/placeOrder_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="5dp">

        <Button
            android:id="@+id/addtoCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_bg"
            android:padding="@dimen/dimen_5dp"
            android:text="Continue"
            android:textColor="@color/white" />

    </LinearLayout>
</RelativeLayout>