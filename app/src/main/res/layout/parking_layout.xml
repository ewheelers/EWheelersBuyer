<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chargecard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    android:background="@color/colorWhite"
    android:elevation="@dimen/padding_10"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/openstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:drawableLeft="@color/dot_dark_screen2"
                android:gravity="center"
                android:text="open"
                android:textColor="@color/colorGreen"
                android:textSize="14sp" />


            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/roundedimage"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_bg"
                android:padding="@dimen/dimen_5dp" />

            <!--<TextView
                android:id="@+id/timings"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:drawableEnd="@drawable/ic_downarrow"
                android:padding="@dimen/padding_10"
                android:text="Time"
                android:textColor="@color/Black"
                android:visibility="visible" />-->

            <!-- <ImageView
                 android:id="@+id/closeimg"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="@dimen/dimen_5dp"
                 android:visibility="gone"
                 app:srcCompat="@drawable/ic_close" />
 -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10">

            <TextView
                android:id="@+id/ShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/providerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <!-- <TextView
                 android:id="@+id/chragehub"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/button_bg_redtransperent"
                 android:gravity="center"
                 android:padding="@dimen/dimen_5dp"
                 android:layout_marginTop="@dimen/padding_10"
                 android:text="Select Park Station"
                 android:textColor="@color/colorPrimary"
                 android:visibility="gone" />-->

           <!-- <TextView
                android:id="@+id/list_timings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/list"
                android:gravity="center"
                android:paddingTop="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_10"
                android:text="Timings"
                android:visibility="gone" />-->

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="@dimen/dimen_5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timings"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableEnd="@drawable/ic_downarrow"
                android:text="Timings"
                android:textSize="12sp"
                android:textColor="@color/Black"
                android:visibility="visible" />
            <TextView
                android:id="@+id/closeimg"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/padding_10"
                android:text="Timings"
                android:drawableEnd="@drawable/ic_up_arrow"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:visibility="gone" />

           <!-- <ImageView
                android:id="@+id/closeimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_close" />-->

        </LinearLayout>

        <TextView
            android:id="@+id/chragehub"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_5dp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:srcCompat="@drawable/ic_call_black_24dp" />

        <TextView
            android:id="@+id/locate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_findstore"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="km"
            android:textAlignment="center"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <TextView
        android:id="@+id/list_timings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/list"
        android:gravity="center"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        android:text="Timings"
        android:visibility="gone" />

</LinearLayout>

