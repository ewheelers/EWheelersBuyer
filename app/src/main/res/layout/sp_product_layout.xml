<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    android:background="@color/white"
    android:elevation="@dimen/padding_10"
    android:orientation="horizontal">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="68dp"
        android:layout_height="@dimen/dimen_68dp"
        android:padding="@dimen/dimen_5dp"
        android:id="@+id/produt_img"
        android:background="@drawable/border_bg"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/sel_pro_tit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_5dp"
        android:text="Product_Title"
        android:textColor="@color/Black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/the_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="start"
            android:padding="@dimen/dimen_5dp"
            android:text="Rs.00.00/-"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <Button
            android:id="@+id/book_pro"
            android:layout_width="wrap_content"
            android:background="@drawable/button_bg_redtransperent"
            android:layout_height="38dp"
            android:layout_gravity="right"
            android:text="Book" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>
