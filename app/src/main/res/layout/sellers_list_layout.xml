<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="@dimen/padding_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/padding_10"
    android:padding="@dimen/dimen_5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.5"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.25"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/seller_name"
            android:textStyle="bold"
            android:padding="@dimen/dimen_5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller Name"
            android:textColor="@color/Black"/>
        <TextView
            android:id="@+id/seller_address"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller Address"
            android:textColor="@color/Black"/>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/dimen_5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:visibility="gone"
                android:id="@+id/seller_cod"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="COD Available"
                android:textColor="@color/Black"/>
                <TextView
                    android:padding="@dimen/dimen_5dp"
                    android:background="@drawable/button_bg_redtransperent"
                    android:id="@+id/seller_viewdetails"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Choose"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <TextView
                android:id="@+id/seller_price"
                android:padding="@dimen/dimen_5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Selling Price"
                android:textColor="@color/Black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/call_seller"
            android:layout_margin="@dimen/padding_10"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_call_black_24dp"
            tools:ignore="NestedWeights" />

        <ImageView
            android:id="@+id/navigate_map"
            android:layout_margin="@dimen/padding_10"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat = "@drawable/ic_findstore"/>
        <TextView
            android:id="@+id/dist"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
