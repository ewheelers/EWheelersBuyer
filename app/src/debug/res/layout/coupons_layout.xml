<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/dimen_5dp">

<com.android.volley.toolbox.NetworkImageView
    android:layout_width="96dp"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_5dp"
    android:id="@+id/offerimg"/>
    <LinearLayout
        android:padding="@dimen/dimen_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/couponValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u20B9 500.00 Off"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/offercomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Testing"
            android:textStyle="normal"
            android:textColor="@color/gray"/>
       <!-- <view
            android:layout_marginTop="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires on : "
            android:textStyle="normal"
            android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/expirydate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" yyyy-mm-dd"
                android:textStyle="normal"
                android:textColor="@color/Black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min order : "
                android:textStyle="normal"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/minorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" \u20B9 50000.00"
                android:textStyle="normal"
                android:textColor="@color/Black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/offercode"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test100"
            android:background="@color/colorPrimary"
            android:padding="@dimen/dimen_5dp"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>
